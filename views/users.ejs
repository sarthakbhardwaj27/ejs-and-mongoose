<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>

<body>
  <div class="main w-full min-h-screen bg-zinc-900 p-10">
    <a href="/" class="text-blue-500 text-2xl">
      < Home Page</a>
      <% if(users.length > 0){ %>
        <div>
          <h1 class="text-white text-3xl mt-10 mb-10">All Users</h1>
          <div class="users flex flex-wrap gap-5">
            <% users.forEach(function(user){ %>
              <div class="user w-72 bg-zinc-800 p-4 rounded-lg">
                <div class="w-full h-52 rounded-lg bg-red-500 overflow-hidden"><img src="<%= user.image%>" alt="userImage" class="w-full h-full object-cover object-center"></div>
                <h3 class="text-2xl tracking-tighter mt-3 text-white"><%= user.name %></h3>
                <h5 class="text-zinc-500"><%= user.email %></h5>
                <div class="flex justify-between mt-5">
                  <a href="" class="text-blue-500">Edit User</a>
                  <a href="/delete/<%= user._id %>" class="text-red-500">Delete User</a>
                </div>
              </div>
              <% }) %>
          </div>
        </div>
      <% } else { %>
        <div class="text-zinc-500 text-xl mt-10">
          No users yet
        </div>
      <% } %>
  </div>
</body>

</html>